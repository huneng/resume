<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:padding="10dp" >

    <EditText
        android:id="@+id/work_edit"
        style="@style/InputEdit"
        android:hint="@string/work_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/company_edit"
        style="@style/InputEdit"
        android:hint="@string/work_company"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/work_start"
            style="@style/InputEdit"
            android:layout_weight="1"
            android:hint="@string/start_time"
            android:inputType="number" />

        <EditText
            android:id="@+id/work_end"
            style="@style/InputEdit"
            android:layout_weight="1"
            android:hint="@string/end_time"
            android:inputType="number" />

        <EditText
            android:id="@+id/work_score"
            style="@style/InputEdit"
            android:layout_weight="1"
            android:hint="@string/score"
            android:inputType="number" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/work_front"
            style="@style/PreviousButton"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/work_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/work_front"
            android:background="@android:drawable/ic_delete" />

        <Button
            android:id="@+id/work_new"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/work_delete"
            android:background="@android:drawable/ic_input_add" />

        <Button
            android:id="@+id/work_next"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/work_new"
            style="@style/NextButton"/>
    </RelativeLayout>

</LinearLayout>